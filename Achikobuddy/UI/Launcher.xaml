<Window x:Name="GUI" x:Class="Achikobuddy.UI.Launcher"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Achikobuddy Launcher" Height="250" Width="560" MinWidth="560" MinHeight="250" MaxWidth="560" MaxHeight="250">
    <Grid x:Name="grid">
        <StackPanel Orientation="Vertical" Margin="0,0,0,12" VerticalAlignment="Top">
            <Grid Height="30" VerticalAlignment="Top">
                <TextBlock HorizontalAlignment="Left" Height="30" TextWrapping="Wrap" Width="120" FontSize="14" Padding="6,4,4,4" Margin="3,0,0,0"
                           Text="Found PID(s):"/>
                <ComboBox x:Name="selectPID"
                          Margin="130,0,3,0"
                          Height="25"/>
            </Grid>
            <Button x:Name="launchMain"
                    Content="LAUNCH"
                    Click="launchMain_Click"
                    Margin="3,8,3,0"
                    Height="30"/>
            <CheckBox x:Name="enableDebugCheckBox"
                      Content="Enable Debug Logging"
                      Margin="3,8,3,0"
                      Height="25"
                      Checked="EnableDebugCheckBox_Checked"
                      Unchecked="EnableDebugCheckBox_Unchecked"/>
        </StackPanel>

        <Image x:Name="logo" Source="/Themes/logo.png" Stretch="Fill"
               Width="300" Height="100" HorizontalAlignment="Right"
               Margin="0,0,3,10" MinHeight="100" VerticalAlignment="Bottom"/>

        <TextBlock x:Name="foot" FontSize="9" VerticalAlignment="Bottom"
                   Padding="3,0,0,3" Text="Achikobuddy v0.1"/>
    </Grid>
</Window>